{
    "extends": "solhint:default",
    "rules": {
        "max-states-count": ["warn", 15],
        "explicit-types": ["warn", "explicit"],
        "no-console": "error",
        "no-empty-blocks": "warn",
        "no-global-import": "off",
        "no-unused-vars": "warn",
        "one-contract-per-file": "error",
        "payable-fallback": "warn",
        "reason-string": ["warn", { "maxLength": 120 }],
        "constructor-syntax": "warn",
        "const-name-snakecase": "warn",
        "contract-name-camelcase": "warn",
        "event-name-camelcase": "warn",
        "max-line-length": "off",
        "func-name-mixedcase": "warn",
        "immutable-vars-naming": ["warn", { "immutablesAsConstants": true }],
        "use-forbidden-name": "warn",
        "var-name-mixedcase": "warn",
        "imports-on-top": "warn",
        "visibility-modifier-order": "warn",
        "gas-custom-errors": "warn",
        "quotes": ["error", "double"],
        "avoid-call-value": "error",
        "avoid-low-level-calls": "error",
        "avoid-sha3": "error",
        "avoid-suicide": "error",
        "avoid-throw": "error",
        "avoid-tx-origin": "error",
        "check-send-result": "error",
        "func-visibility": ["error", { "ignoreConstructors": true }],
        "multiple-sends": "warn",
        "no-complex-fallback": "warn",
        "no-inline-assembly": "warn",
        "not-rely-on-block-hash": "warn",
        "reentrancy": "error",
        "state-visibility": "error"
    }
}
